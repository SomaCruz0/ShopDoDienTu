@model WebDienTu.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
}


<div class="login">
    <div class="container-fluid center">
        <h2>Đăng nhập</h2>
        <form asp-action="DangNhap" asp-route-returnurl="@ViewBag.ReturnUrl">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row">
                <div class="col-lg-8">
                    <div class="register-form">
                        <div class="row">
                            <div class="col-md-8">
                                <label asp-for="@Model.UserName" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.UserName" class="form-control">
                                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-8">
                                <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.Password" class="form-control">
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <button class="btn">Đăng nhập</button>
                                <a href="#">  Quên mật khẩu</a>
                            </div>
                            <div class="col-md-8">
                                <label class="form-label my-3">Bạn chưa có tài khoản?</label>
                                <a asp-controller="KhachHang" asp-action="DangKy"> Đăng ký</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Login End -->