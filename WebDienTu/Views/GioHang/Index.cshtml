@model IEnumerable<WebDienTu.ViewModels.GioHang>
@{
    ViewData["Title"] = "Giỏ hàng";
}
<!-- Cart Start -->
<div class="cart-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-page-inner">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tổng</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody class="align-middle">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="img">
                                                <a href="#"><img src="~/Hinh/HangHoa/@item.Hinh" alt="@item.TenHH"></a>
                                                <p>
                                                    <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHh">
                                                        @item.TenHH
                                                    </a>
                                                </p>
                                            </div>
                                        </td>
                                        <td>$ @item.DonGia</td>
                                        <td>
                                            <div class="qty">
                                                <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                                <input type="text" value="@item.SoLuong">
                                                <button class="btn-plus"><i class="fa fa-plus"></i></button>
                                            </div>
                                        </td>
                                        <td>$ @item.ThanhTien</td>
                                        <td><a asp-action="RemoteCart" asp-controller="GioHang" asp-route-id="@item.MaHh"><i class="fa fa-trash"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart-page-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="coupon">
                                <input type="text" placeholder="Mã giảm giá">
                                <button>Áp mã</button>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="cart-summary">
                                <div class="cart-content">
                                    <h1>Tổng tiền giỏ hàng</h1>
                                    <p>Tổng tiền sản phẩm<span>$ @Model.Sum(p => p.ThanhTien)</span></p>
                                    <p>Phí vận chuyển<span>$1</span></p>
                                    <h2>Tổng cộng<span>$ @(Model.Sum(p => p.ThanhTien)+1) </span></h2>
                                </div>
                                <div class="cart-btn">
                                    <a asp-controller="GioHang" asp-action="Checkout">
                                        <button>Thanh toán</button>
                                    </a>
                                    <button>Cập nhật giỏ hàng</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->
